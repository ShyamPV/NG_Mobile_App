<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".PostDetailActivity">

    <ImageView
        android:id="@+id/post_detail_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/new_year" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_detail_title"
                style="@style/title_text"
                android:text="New Year Celebration" />

            <TextView
                android:id="@+id/post_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Date: 31/12/2021"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="From: 9:00 PM to 12:00 AM"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>